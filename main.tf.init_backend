provider "aws" {
  region	= "ap-southeast-2"
}

resource "aws_s3_bucket" "tf_backend" {
  bucket = "tom.niu14-backend"
}

resource "aws_dynamodb_table" "tf_state_lock" {
  name           = "tf-lock"
  read_capacity  = 5
  write_capacity = 5
  hash_key       = "LockID"

  attribute {
    name = "LockID"
    type = "S"
  }
}
